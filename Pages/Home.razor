@code
{
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var scriptPath = "/JS/threejs-animation.js"; // Correct path to the JavaScript file
            await JSRuntime.InvokeVoidAsync("eval", System.IO.File.ReadAllText(scriptPath));
        }
    }


}
